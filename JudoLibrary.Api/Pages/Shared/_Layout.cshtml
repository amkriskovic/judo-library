<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <!-- Login form styles -->
    <style>
        * {
            font-family: "Roboto", sans-serif !important;
            box-sizing: border-box;
        }
    
        body {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #1e2328;
            flex-direction: column;
        }
        
        .title {
           text-align: center;
           color: #ebedf0;
           font-size: 30px;
        }
        
        form {
            display: flex;
            flex-direction: column;
            background: #ebedf0;
            padding: 1.7rem 2rem;
            max-width: 300px;
            width: 100%;
            margin: 0 1rem;
            border-radius: 4px;
            box-shadow: 0 1px 8px 1px #d4dce7;
        }
        
        .field {
             display: flex;
             flex-direction: column;
             align-items: flex-start;
             margin-bottom: .5rem;
        }
        
        .field > label {
            font-size: 14px;
            font-weight: bold;
        }
        
       .field > input {
            margin-bottom: .25rem;
            width: 100%;
            
            line-height: 20px;
            padding: 8px 4px 8px;
            max-width: 100%;
            min-width: 0px;
            border: 1px solid #1e2328;
            font-size: 16px;
            border-radius: 4px;
            
            background: #ecedee;
       }
       
       .field > input:focus {
           outline: none;
           border: 1px solid #1976d2;
       }
        
        .field > span { 
            font-size: 14px;
            color: #db005f;
        }
        
        .flex-row {
            flex-direction: row;
            justify-content: space-evenly;
        }
        
        hr {
            width: 100%
        }
        
        .field > button {
            height: 36px;
            min-width: 64px;
            padding: 0 16px;
            background-color: transparent;
            border-radius: 4px;
           border: 1px solid #1976d2;
           cursor: pointer;
           font-size: 15px;
        }
        
        .field > a {
            text-decoration: none;
        }
    </style>

</head>
<body>

<h3 class="title">Judo Library</h3>

@RenderBody()

</body>
</html>